<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#209483"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rowprofimg"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/image1"
            android:padding="1dp"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProfileName"
            android:textColor="#FDF5F2F2"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:id="@+id/nameid"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/postid"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_photo_library_black_24dp"
                android:text="50K"
                android:textStyle="bold"
                android:textColor="#F8F4F4"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/foloid"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:text="50K"
                android:textStyle="bold"
                android:textColor="#F0EFEF"
                android:textSize="20dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/msgid"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_chat_black_24dp"
                android:text="50K"
                android:textColor="#FAF6F6"
                android:textStyle="bold"
                android:textSize="20dp">

            </TextView>

            <TextView
                android:id="@+id/likeid"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                android:text="50K"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20dp">

            </TextView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>